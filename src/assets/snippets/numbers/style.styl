.numbers 
    position: relative
    background: url(./images/bg.jpg)
    background-size: cover
    background-attachment: fixed 
    color: #fff 
    padding: (gutter) 0

    &:before 
        content: ''
        position: absolute
        top: 0 
        left: 0 
        width: 100% 
        height: 100% 
        background: rgba(0,0,0,.8)
        z-index: 1

    &__container
        position: relative 
        z-index 2 
        display: container

    &__header 
        margin-bottom: 40px

    &__title 
        font-size: 32px
        font-weight: bold
        text-transform: uppercase 
        text-align: center

    &__item 
        padding: (gutter/2)

    &__label 
        display: flex 
        justify-content: center 
        align-items: center
        font-size: 46px
        text-shadow: 1px 1px 3px rgba(0,0,0,.9)

        span 
            font-weight: bold
            margin-left: 10px

    &__description 
        text-align: center
        font-size: 14px
        font-weight: regular 
        text-transform: uppercase

@media (min-width: 992px)
    .numbers 
        &__content 
            display: flex 
            justify-content: space-around
            align-items: center

        